<div class="container">
  <div class="row pt-3">
    {{#unless favorites}}
      <div class="col-xs-12 text-center pt-5">
        <h2>No favorites yet ðŸ˜¢</h2>
      </div>
    {{/unless}}
    {{#each favorites}}
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 d-flex flex-col flex-grow">
      <div class="card mb-3 shadow-sm">
        <img class="thumbnail-image card-img-top" src="{{this.recipe.image}}" alt="Card image cap">
        <div class="card-body">
          <div class="d-flex flex-column" style="height: 100%; max-height: 275px;">
            <div>
              <h5 class="card-title">{{this.recipe.recipe_name}}</h5>
            </div>
            <div class="card-recipe-description">
              <p class="card-text"> {{this.recipe.description}} </p>
            </div>
            <div class="text-center">
              <a href="/recipe/{{this.recipe.id}}" class="btn btn-primary">View Recipe</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>