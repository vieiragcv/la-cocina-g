<div class="container">
  <div class="row pt-3">
    <div class="col-3">
      {{> sidebar }}
    </div>
    <div class="col-9">
      <div class="row">
        <div>
          <h3 class="text-center">{{category.category_name}} Recipes</h3>
        </div>
        {{#each category.recipes}}
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 d-flex flex-col flex-grow">
          <div class="card mb-3 shadow-sm">
            <img class="thumbnail-image card-img-top" src="{{this.image}}" alt="Card image cap">
            <div class="card-body">
              <div class="d-flex flex-column" style="height: 100%; max-height: 275px;">
                <div>
                  <h5 class="card-title">{{this.recipe_name}}</h5>
                </div>
                <div class="card-recipe-description">
                  <p class="card-text"> {{this.description}} </p>
                </div>
                <div class="text-center">
                  <a href="/recipe/{{this.id}}" class="btn btn-primary">View Recipe</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>