<div class="container">
  <div class="row pt-3">
    {{#each category}}
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 d-flex flex-col flex-grow">
      <div class="card mb-3 shadow-sm">
        <img class="thumbnail-image card-img-top" src="{{this.recipes.[0].image}}" alt="Card image cap">
        <div class="card-body">
          <div class="d-flex flex-column" style="height: 100%; max-height: 275px;">
            <div>
              <h5 class="card-title text-center">{{this.category_name}}</h5>
            </div>
            <div class="card-recipe-description">
              <p class="card-text">  </p>
            </div>
            <div class="text-center">
              <a href="/category/{{this.category_name}}" class="btn btn-primary">View Category</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
